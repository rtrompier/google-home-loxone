{
    "name": "google-home-loxone",
    "version": "1.0.3",
    "description": "Bridge for Google Home and Loxone",
    "main": "index.js",
    "bin": {
        "google-home-loxone": "./bin/global.js"
    },
    "dependencies": {
        "@akanass/rx-http-request": "^3.3.0",
        "actions-on-google": "^2.13.0",
        "express": "^4.17.1",
        "node-googlehome": "0.0.7",
        "node-lox-ws-api": "^0.4.5",
        "rxjs": "^6.6.3",
        "uuid": "^8.3.1",
        "yargs": "^16.0.3"
    },
    "devDependencies": {
        "@types/express": "^4.17.8",
        "@types/jasmine": "^3.5.14",
        "@types/node": "~14.11.8",
        "@types/yargs": "^15.0.8",
        "codelyzer": "^6.0.1",
        "jasmine": "^3.6.1",
        "jasmine-core": "^3.6.0",
        "jasmine-node": "^3.0.0",
        "jasmine-ts": "^0.3.0",
        "jasmine-ts-console-reporter": "^3.1.1",
        "karma": "^5.2.3",
        "karma-jasmine": "^4.0.1",
        "nock": "^13.0.4",
        "pm2": "^4.5.0",
        "ts-node": "^9.0.0",
        "tsc-watch": "^4.2.9",
        "tslint": "^5.20.1",
        "typescript": "^4.0.3"
    },
    "scripts": {
        "start": "tsc && node dist/index.js",
        "start:dev": "tsc-watch --onSuccess \"node ./dist/index.js\"",
